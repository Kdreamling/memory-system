# ============================================
# Memory System 环境变量配置
# ============================================

# ---------- Supabase 配置 ----------
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=你的supabase_anon_key
SUPABASE_DB_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# ---------- DeepSeek 配置（主要聊天API） ----------
LLM_API_KEY=你的DeepSeek_API_Key
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat

# ---------- OpenRouter 配置（用于GPT-4o、Claude等） ----------
# 在Kelivo中使用 gpt-4o、claude-3.5-sonnet 等模型时需要
OPENROUTER_API_KEY=你的OpenRouter_Key（以sk-or-开头）

# ---------- 硅基流动 配置（用于Embedding） ----------
# 用于MemU的语义搜索功能
# 注册地址：https://siliconflow.cn
SILICONFLOW_API_KEY=你的硅基流动Key

# MemU需要的环境变量（使用硅基流动）
OPENAI_API_KEY=你的硅基流动Key（和上面一样）
OPENAI_BASE_URL=https://api.siliconflow.cn/v1

# ---------- 服务配置 ----------
GATEWAY_PORT=8001
MEMU_PORT=8000
MEMU_URL=http://localhost:8000
